<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:K4W.KinectDrone.Client.UserControls"
        x:Class="K4W.KinectDrone.Client.MainWindow"
        Title="Kinect Drone"
        Height="900"
        Width="1800"
        WindowState="Maximized"
        x:Name="Window">
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.jpg" />
    </Window.Background>
    <Grid Height="675"
          Width="1400"
          Margin="0"
          HorizontalAlignment="Center"
          VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="640px" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="640px" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="Kinect"
              HorizontalAlignment="Center"
              Margin="0"
              VerticalAlignment="Top"
              Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="480px" />
            </Grid.RowDefinitions>

            <Label Content="Kinect Camera"
                   FontSize="26.667"
                   VerticalAlignment="Center"
                   Margin="25,15"
                   HorizontalAlignment="Left"
                   FontWeight="Bold"
                   FontFamily="Open Sans Extrabold" />

            <Image x:Name="KinectImage"
                   Grid.Row="1"
                   Source="Resources/kinect_dummy.jpg"
                   Stretch="Fill"
                   Margin="25,0,25,25"
                   Grid.ColumnSpan="2" />
            <uc:KinectInfoControl CurrentStatus="{Binding KinectStatus, ElementName=Window}"
                                  Grid.Row="0"
                                  Grid.Column="1"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  Margin="25,15" />
        </Grid>
        <Grid x:Name="Drone"
              Margin="0"
              Grid.Column="2"
              Background="White"
              HorizontalAlignment="Center"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="480px" />
            </Grid.RowDefinitions>
            <Label Content="AR Drone Camera"
                   FontSize="26.667"
                   VerticalContentAlignment="Center"
                   Margin="25,15"
                   FontWeight="Bold"
                   FontFamily="Open Sans Extrabold" />
            <Image x:Name="DroneImage"
                   Grid.ColumnSpan="2"
                   Grid.Row="1"
                   Source="Resources/drone_dummy.jpg"
                   Stretch="Fill"
                   Margin="25,0,25,25" />
        </Grid>
        <Grid Margin="0"
              Grid.Row="1"
              Grid.ColumnSpan="3"
              Background="White">
            <Label x:Name="Output"
                   Content="{Binding Log, ElementName=Window}"
                   FontSize="26.667"
                   VerticalAlignment="Center"
                   Margin="25"
                   FontWeight="Bold"
                   FontFamily="Open Sans Light"
                   Grid.RowSpan="3" />
        </Grid>
    </Grid>
</Window>
